# JexidaMCP Server Configuration
# Copy this file to .env and customize as needed

# Server settings
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=0.0.0.0
MCP_LOG_LEVEL=INFO

# Azure CLI settings
AZURE_CLI_PATH=az
AZURE_CLI_TIMEOUT=300
AZURE_COMMAND_MAX_LENGTH=4096

# Azure authentication (optional - can use 'az login' instead)
# These can also be stored in the database via the dashboard
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_DEFAULT_SUBSCRIPTION=your-default-subscription-id

# HTTP health probe settings
HTTP_PROBE_DEFAULT_TIMEOUT=30
HTTP_PROBE_MAX_TIMEOUT=120

# UniFi Controller settings
# These can also be stored in the database via the dashboard
# UNIFI_CONTROLLER_URL=https://192.168.1.1
# UNIFI_USERNAME=admin
# UNIFI_PASSWORD=your-password
# UNIFI_SITE=default
# UNIFI_VERIFY_SSL=false
# UNIFI_TIMEOUT=30

# Synology NAS settings
# These can also be stored in the database via the dashboard
# SYNOLOGY_URL=https://192.168.1.10:5001
# SYNOLOGY_USERNAME=admin
# SYNOLOGY_PASSWORD=your-password
# SYNOLOGY_VERIFY_SSL=false
# SYNOLOGY_TIMEOUT=30

# Database settings (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///secrets.db
# DATABASE_URL=postgresql://user:password@localhost/jexidamcp

# Secret encryption key (REQUIRED for production!)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# SECRET_ENCRYPTION_KEY=your-generated-fernet-key

# Environment (set to 'production' to require SECRET_ENCRYPTION_KEY)
# ENVIRONMENT=development

# =============================================================================
# AI Assistant Configuration
# =============================================================================

# OpenAI Configuration (for development)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_ORG_ID=org-your-org-id

# Azure OpenAI Configuration (for production)
# Set up Azure OpenAI: https://azure.microsoft.com/products/ai-services/openai-service
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_KEY=your-azure-openai-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Assistant Generation Settings
# ASSISTANT_MAX_TOKENS=4096
# ASSISTANT_TEMPERATURE=0.7

# Assistant Context Settings
# ASSISTANT_MAX_CONTEXT_TOKENS=8000
# ASSISTANT_PRESERVE_MESSAGES=4

# Assistant Agentic Settings
# ASSISTANT_MAX_ITERATIONS=10

# =============================================================================
# Patreon Integration
# =============================================================================

# Quick Setup: Use creator access token from Patreon developer portal
# Generate at: https://www.patreon.com/portal/registration/register-clients
# PATREON_ACCESS_TOKEN=your-creator-access-token

# Production Setup: OAuth2 with token refresh
# PATREON_CLIENT_ID=your-client-id
# PATREON_CLIENT_SECRET=your-client-secret
# PATREON_REFRESH_TOKEN=your-refresh-token

# Optional: Default campaign ID (can be discovered via API)
# PATREON_CREATOR_CAMPAIGN_ID=12345678

