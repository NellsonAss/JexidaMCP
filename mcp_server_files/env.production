# JexidaMCP Production Configuration
# Copy this file to .env and customize the values

# =============================================================================
# REQUIRED SETTINGS - You must set these for production
# =============================================================================

# Environment - set to production to enforce encryption key requirement
ENVIRONMENT=production

# Secret encryption key for database secrets
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_ENCRYPTION_KEY=CHANGE_ME_GENERATE_A_KEY

# Password for web UI access (simple single password auth)
AUTH_PASSWORD=CHANGE_ME_SET_A_PASSWORD

# Session secret for cookies (auto-generated if not set, but better to set explicitly)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_SESSION_SECRET=CHANGE_ME_GENERATE_A_SECRET

# =============================================================================
# Server settings
# =============================================================================
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=0.0.0.0
MCP_LOG_LEVEL=INFO

# =============================================================================
# Service Credentials (can also be set via web UI under Secrets)
# =============================================================================

# UniFi Controller
# UNIFI_CONTROLLER_URL=https://192.168.1.1
# UNIFI_USERNAME=admin
# UNIFI_PASSWORD=your-password
# UNIFI_SITE=default
# UNIFI_VERIFY_SSL=false

# Synology NAS
# SYNOLOGY_URL=https://192.168.1.10:5001
# SYNOLOGY_USERNAME=admin
# SYNOLOGY_PASSWORD=your-password
# SYNOLOGY_VERIFY_SSL=false

# Azure (optional)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_DEFAULT_SUBSCRIPTION=your-subscription-id

# =============================================================================
# AI Assistant (optional)
# =============================================================================

# OpenAI
# OPENAI_API_KEY=sk-your-api-key

# Or Azure OpenAI
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_KEY=your-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4









